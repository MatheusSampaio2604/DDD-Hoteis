@model IEnumerable<Application.ViewModel.AcomodacaoViewModel>

@{
    ViewData["Title"] = "Suítes";
}
<!--================Breadcrumb Area =================-->
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Suítes</h2>
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Pagina Inicial</a></li>
                <li class="active">Suítes</li>
            </ol>
        </div>
    </div>
</section>
<!--================Breadcrumb Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color" style="font-family: dancingscript-regular,dancing script,cursiv;">Nossas Suítes</h2>
            <h4>
                Nossas unidades são dotadas de aquecedores externos a gás para os chuveiros e banheiras de hidromassagem, secadores de cabelos, cofres para guarda de valores e pequenos objetos, lençol térmico, lareira a lenha, Tv a cabo, DVD, frigobar e varanda com rede.
                <br />
                Face às constantes faltas de energia, disponibilizamos um gerador diesel com capacidade para atender toda a pousada.
            </h4>
        </div>
        <div class="row justify-content-center mb_30">
            @foreach (var item in Model.OrderBy(index => index.Nome).ToList())
            {
                <div class="col-lg-3 col-sm-6">
                    <div onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="accomodation_item text-center">
                        <div class="hotel_img">
                            @{ if (!string.IsNullOrWhiteSpace(item.RotaImagem))
                                {
                                    <img width="260" height="270" src="@item.RotaImagem.FirstOrDefault()" alt=""> }
                                else
                                {
                                    <img width="260" height="270" src="/img/TesteBC.png" alt="" />
                                }
                            }
                            <a href="#" class="btn theme_btn button_hover">Alugue</a>
                        </div>
                        <h4 class="sec_h4">@Html.DisplayFor(modelItem => item.Nome)</h4>
                        <h5>R$ @Html.DisplayFor(modelItem => item.Tarifas.Valor)<small>/noite</small></h5>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
@await Html.PartialAsync("../Home/BookLibrary")