<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pousada Moriá</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @*  *@
    <link rel="stylesheet" href="Novocss/bootstrap.css">
    <link rel="stylesheet" href="Novovendors/linericon/style.css">
    <link rel="stylesheet" href="Novocss/font-awesome.min.css">
    <link rel="stylesheet" href="Novovendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="Novovendors/bootstrap-datepicker/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="Novovendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="Novovendors/owl-carousel/owl.carousel.min.css">
    <!-- main css -->
    <link rel="stylesheet" href="Novocss/style.css">
    <link rel="stylesheet" href="Novocss/responsive.css">

    @*  *@
</head>

<body>
    <header class="header_area">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <!-- Brand and toggle get grouped for better mobile display -->
                <a class="navbar-brand logo_h" asp-area="" asp-controller="Home" asp-action="Index">A Pousada</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                    <ul class="nav navbar-nav menu_nav ml-auto">
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Chale" asp-action="Index">Chalés</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Suite" asp-action="Index">Suítes</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Privacidade</a></li>
                        <li class="nav-item"><a class="nav-link" href="elements.html">Elemests</a></li>
                        <li class="nav-item"><a class="nav-link" href="contact.html">Contact</a></li>
                        <li class="nav-item submenu dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ADM</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item"><a class="nav-link" asp-controller="Acomodacao" asp-action="Index">Acomodação</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Tarifas" asp-action="Index">Preços</a></li>
                                <li class="nav-item"><a class="nav-link" asp-controller="Estabelecimento" asp-action="Index">Estabelecimento</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>


    <main role="main" class="pb-3">
        @RenderBody()
        <br />
        <br />
    </main>

    <!--================Booking Tabel Area =================-->
    <section class="hotel_booking_area">
        <div class="container">
            <div class="row hotel_booking_table">
                <div class="col-12 col-md-3">
                    <h2>Pesquise<br>Conosco</h2>
                </div>
                <div class="col-md-9">
                    <div class="boking_table">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="form-group">
                                        <div class='input-group date' id='datetimepicker11'>
                                            <input type='text' class="form-control" placeholder="Data Entrada" />
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" placeholder="Data Saída" />
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <select class="wide">
                                            <option data-display="Pessoas">Selecione</option>
                                            <option value="1">1 Pessoa</option>
                                            <option value="2">2 Pessoas</option>
                                        </select>
                                    </div>
                                    <div class="input-group">
                                        <select class="wide">
                                            <option data-display="Pet's">Selecione</option>
                                            <option value="1">Sim</option>
                                            <option value="0">Não</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <select class="wide" asp-items="@(new SelectList(ViewBag.Acomodacoes, "Id", "Nome"))">
                                            <option selected disabled data-display="Acomodação desejada">Selecione</option>
                                        </select>
                                    </div>
                                    <a class="book_now_btn button_hover" href="#">Entrar em Contato</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
        <br />
        <br />
    </section>
    <!--================Booking Tabel Area  =================-->

    <footer class="footer-area ">
        <div class="container">
            <div class="row footer-bottom d-flex justify-content-between align-items-center">
                <p class="col-lg-8 col-sm-12 footer-text m-0">
                    Copyright &copy; @DateTime.Now.Year; Todos os direitos reservados.
                </p>
                <div class="col-lg-4 col-sm-12 footer-social">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-dribbble"></i></a>
                    <a href="#"><i class="fa fa-behance"></i></a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*  *@

    <script src="Novojs/jquery-3.2.1.min.js"></script>
    <script src="Novojs/popper.js"></script>
    <script src="Novojs/bootstrap.min.js"></script>
    <script src="Novovendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="Novojs/jquery.ajaxchimp.min.js"></script>
    <script src="Novojs/mail-script.js"></script>
    <script src="Novovendors/bootstrap-datepicker/bootstrap-datetimepicker.min.js"></script>
    <script src="Novovendors/nice-select/js/jquery.nice-select.js"></script>
    <script src="Novojs/mail-script.js"></script>
    <script src="Novojs/stellar.js"></script>
    <script src="Novovendors/lightbox/simpleLightbox.min.js"></script>
    <script src="Novojs/custom.js"></script>

    @*  *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
