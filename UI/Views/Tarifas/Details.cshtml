@model Application.ViewModel.TarifasViewModel

@{
    ViewData["Title"] = "ADM - Detalhes";
    ViewData["ActiveText"] = "Administração - Detalhes";
}

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb"); 

<section class="section_gap">
<div class="container">

<div class="container">
    <h1 class="display-4">Detalhes</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tarifas</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Valor:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Valor, "{0:N2}")</dd>

                <dt class="col-sm-2">Nome:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-2">Ativo:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Ativo)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
</div>
</section>