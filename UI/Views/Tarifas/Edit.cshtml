@model Application.ViewModel.TarifasViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary">Edit</h1>

<h4 class="text-success">Tarifas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Valor" class="form-label text-info">Valor</label>
                <input asp-format="{0:N2}" asp-for="Valor" class="form-control bg-light text-dark" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nome" class="form-label text-info">Nome</label>
                <input asp-for="Nome" class="form-control bg-light text-dark" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
                <label class="form-check-label" for="Ativo">@Html.DisplayNameFor(model => model.Ativo)</label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
