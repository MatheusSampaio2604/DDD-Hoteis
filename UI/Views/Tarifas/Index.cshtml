@model IEnumerable<Application.ViewModel.TarifasViewModel>

@{
    ViewData["Title"] = "ADM - Tarifas";
    ViewData["ActiveText"] = "Administração - Tarifas";
}

<!--================Breadcrumb Area =================-->

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb");

<!--================Breadcrumb Area =================-->
@if (Model.Any())
{
    <section class="section_gap">
        <div class="container">
            <p>
                <a class="btn btn-info btn-sm" asp-action="Create">Criar Novo</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Valor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor, "{0:N2}")
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </section>
}
else
{
    <section class="section_gap text-center">
        <div class="container">

            <h1>Tarifas</h1>

            <h1><strong>Não existem Tarifas no Banco de Dados</strong></h1>
            <h2>Considere Adicionar Novas</h2>
            <p><a class="btn btn-success btn-lg" asp-action="Create">Adicionar</a></p>
        </div>
    </section>
}