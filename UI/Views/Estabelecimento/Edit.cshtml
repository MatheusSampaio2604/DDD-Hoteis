@model Application.ViewModel.HomeViewModel

@{
    ViewData["Title"] = "Editar";
    ViewData["ActiveText"] = "Administração - Edição";
}

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb"); 

<section class="section_gap">
    
<div class="container">
<h2>Editar @Model.Nome</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_0" class="control-label"></label>
                <input asp-for="Descricao_0" class="form-control" />
                <span asp-validation-for="Descricao_0" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_1" class="control-label"></label>
                <input asp-for="Descricao_1" class="form-control" />
                <span asp-validation-for="Descricao_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_2" class="control-label"></label>
                <input asp-for="Descricao_2" class="form-control" />
                <span asp-validation-for="Descricao_2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_3" class="control-label"></label>
                <input asp-for="Descricao_3" class="form-control" />
                <span asp-validation-for="Descricao_3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao_4" class="control-label"></label>
                <input asp-for="Descricao_4" class="form-control" />
                <span asp-validation-for="Descricao_4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
