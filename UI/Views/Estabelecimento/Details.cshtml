@model Application.ViewModel.HomeViewModel


@{
    ViewData["Title"] = "Detalhes";
    ViewData["ActiveText"] = "Administração - Detalhes";
}

<!--================Breadcrumb Area =================-->

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb");

<!--================Breadcrumb Area =================-->

<section class="section_gap">
    
<div class="container">
    <h1 class="display-4">Detalhes</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Nome</h4>
            <hr />
            <dl class="row">
                
                <dt class="col-sm-2">Descrição 0:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao_0)</dd>

                <dt class="col-sm-2">Descrição 1:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao_1)</dd>

                <dt class="col-sm-2">Descrição 2:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao_2)</dd>

                <dt class="col-sm-2">Descrição 3:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao_3)</dd>

                <dt class="col-sm-2">Descrição 4:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao_4)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
</section>
