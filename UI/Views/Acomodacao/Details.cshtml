@model Application.ViewModel.AcomodacaoViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="display-4">Detalhes</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Acomodacao: <strong>@Model?.Nome</strong></h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdHome):</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Home.Nome)</dd>

                <dt class="col-sm-2">Descrição:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdValor):</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Tarifas.Valor, "{O: N2}")</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Ativo):</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Ativo)</dd>

            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
