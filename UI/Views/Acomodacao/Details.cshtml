@model Application.ViewModel.AcomodacaoViewModel

@{
    ViewData["Title"] = "ADM - Detalhes";
    ViewData["ActiveText"] = "Administração - Detalhes";
}

<!--================Breadcrumb Area =================-->

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb");

<!--================Breadcrumb Area =================-->
<section class="section_gap">

    <div class="container">
        <h1 class="display-4">Detalhes</h1>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Acomodacao: <strong>@Model?.Nome</strong></h4>
                <hr />
                <dl class="row">
                    <div class="img">
                        @if (Model.ImagensID.Count() > 0)
                        {
                            foreach (string i in Model.ImagensID)
                            {
                                <img width="500" height="500" src="~/@i" alt="">
                            }
                        }
                        else
                        {
                            <label>Ainda não há fotos para @Model.Nome</label>
                        }
                    </div>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdHome):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Home.Nome)</dd>

                    <dt class="col-sm-2">Descrição:</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdValor):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Tarifas.Valor, "{O: N2}")</dd>

                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Ativo):</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Ativo)</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Deletar</a>
            <a class="btn btn-info" asp-action="Index">Voltar para a Lista</a>
        </div>
    </div>
</section>