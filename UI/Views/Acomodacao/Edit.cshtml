@model Application.ViewModel.AcomodacaoViewModel

@{
    ViewData["Title"] = "ADM - Editar";
    ViewData["ActiveText"] = "Administração - Editar";
}

<!--================Breadcrumb Area =================-->

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb");

<!--================Breadcrumb Area =================-->
<section class="section_gap">

    <div class="container">

        <h1 class="text-primary">Editar</h1>

        <h4 class="text-success">Acomodação: @Model.Nome</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        @if (Model.ImagensID.Count() > 0)
                        {
                            foreach (var i in Model.ImagensID)
                            {
                                <div class="carousel">
                                    <img src="~/@i" class="img-thumbnail" alt="Imagem do Produto"
                                        style="max-width: 200px; max-height: 200px; margin-right: 10px;" />
                                </div>
                            }
                        }
                        else
                        {
                            <label>Ainda não há fotos para @Model.Nome</label>
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="Fotos" class="form-label text-info">Fotos</label>
                        <input class="form-control bg-light" type="file" name="Fotos" asp-for="Fotos" multiple />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label text-info"></label>
                        <input asp-for="Nome" class="form-control bg-light text-dark" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label text-info"></label>
                        <textarea asp-for="Descricao" class="form-control bg-light text-dark" rows="4"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdValor" class="form-label text-info"></label>
                        <select asp-for="IdValor" class="form-select bg-light text-dark"
                            asp-items="@(new SelectList(ViewBag.Tarifas, "Id", "Valor"))">
                        </select>
                        <span asp-validation-for="IdValor" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdHome" class="form-label text-info"></label>
                        <select asp-for="IdHome" class="form-select bg-light text-dark"
                            asp-items="@(new SelectList(ViewBag.Home, "Id", "Nome"))"></select>
                        <span asp-validation-for="IdHome" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo"
                            id="flexSwitchCheckAtivo" checked="@Model.Ativo" />
                        <label class="form-check-label" for="flexSwitchCheckAtivo">Pronto para Anunciar?</label>
                        <span asp-validation-for="Ativo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-info mt-3" asp-action="Index">Voltar para a Lista</a>
        </div>

    </div>

</section>
