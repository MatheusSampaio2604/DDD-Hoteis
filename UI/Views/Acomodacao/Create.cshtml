@model Application.ViewModel.AcomodacaoViewModel

@{
    ViewData["Title"] = "ADM - Criação";
    ViewData["ActiveText"] = "Administração - Criação";
}

<!--================Breadcrumb Area =================-->

@* Renderiza o fragmento de breadCrumb no começo da pagina *@
@await Html.PartialAsync("../Fragments/_Breadcrumb");

<!--================Breadcrumb Area =================-->

<section class="section_gap">
    <div class="container">

        <h1 class="text-primary">Criar Novo(a)</h1>

        <h4 class="text-success">Acomodação</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="form-group">
                        <label asp-for="TipoAcomodacao" class="form-label text-info"></label>
                        <select asp-for="TipoAcomodacao"
                            asp-items="@(new SelectList(new List<string> { "Chalé", "Suíte", "Apartamento" }))"
                            class="form-control bg-light text-dark">
                            <option selected disabled value="">Selecione</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Nome" class="form-label text-info"></label>
                        <input asp-for="Nome" class="form-control bg-light text-dark" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label text-info"></label>
                        <textarea asp-for="Descricao" class="form-control bg-light text-dark" rows="4"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fotos" class="form-label text-info">Fotos</label>
                        <input class="form-control bg-light" type="file" name="Fotos" asp-for="Fotos" multiple />
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdValor" class="form-label col-md-3 text-info"></label>
                        <select asp-for="IdValor" asp-items="@(new SelectList(ViewBag.Tarifas, "Id", "Valor"))"
                            class="form-select bg-light text-dark">
                            <option selected disabled value="">Selecione</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdHome" class="form-label col-md-3 text-info"></label>
                        <select asp-for="IdHome" asp-items="@(new SelectList(ViewBag.Home, "Id", "Nome"))"
                            class="form-select bg-light text-dark">
                            <option selected disabled value="">Selecione</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a class="btn btn-info" asp-action="Index">Voltar para a Lista</a>
        </div>

    </div>
</section>
