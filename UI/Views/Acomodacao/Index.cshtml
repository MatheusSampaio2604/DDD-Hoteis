@model IEnumerable<Application.ViewModel.AcomodacaoViewModel>

@{
    ViewData["Title"] = "Acomodacao";
}

<h1>Acomodação</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div onclick="location.href='@Url.Action("Details", new { id = item.Id })'" class="col-md-4 col-lg-3 col-sm-6 mb-4">

                <div class="data d-flex flex-column align-items-center">
                    <div class="nome">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </div>
                    <div class="Active">@Html.DisplayFor(modelItem => item.Ativo)</div>
                    <br />
                    <div class="imagem">
                        @{
                            if (!string.IsNullOrWhiteSpace(item.RotaImagem))
                            {
                                <img class="img-fluid" width="200" height="200" src=@item.RotaImagem />
                            }
                            else
                            {
                                <img class="img-fluid" width="200" height="200" src="/img/TesteAC.png" />
                            }
                        }
                    </div>
                    <br />
                    <div class="botoes">
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </div>
                </div>

            </div>
        }
    </div>
</div>
<link href="~/css/StyleAcomodação.css" rel="stylesheet" />