@model IEnumerable<Application.ViewModel.AcomodacaoViewModel>


@{
    ViewData["Title"] = "Pagina Inicial";
}

<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background="">
        </div>
        <div class="container">
            <div class="banner_content text-center">
                <h6>LONGE DA VIDA MONÓTONA</h6>
                <h2>RELAXE SUA MENTE</h2>
                <p>Se você estiver procurando por virgens na web, poderá ficar muito confuso com a<br> diferença de
                    preço. Você pode ver algumas de nossas acomodações por apenas R$ 500,00 cada...</p>
            </div>
        </div>
    </div>
</section>
<!--================Banner Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Nossas Acomodações</h2>
            <p>Todos vivemos numa época que pertence aos jovens de coração. Vida que está se tornando extremamente
                rápida, experimente relaxar conosco.</p>
        </div>
        <div class="row mb_30 justify-content-center">
            @foreach (var item in Model.OrderBy(index => index.Nome).ToList())
            {
                    string linkController = string.Empty; string linkAction = "Details";
                    if (item.Nome.Contains("CHALÉ"))
                        linkController = "Chale";
                    else if (item.Nome.Contains("SUÍTE"))
                        linkController = "Suite";
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            @{
                                if (!string.IsNullOrWhiteSpace(item.ImagensID.FirstOrDefault()))
                                {
                                    <img width="260" height="270" src="@item.ImagensID.FirstOrDefault()" alt="">
                                }
                                else
                                {
                                    <img width="260" height="270" src="~/img/DevIndex.png" alt="LogoTemporario" />
                                }
                            }
                            <a href="@Url.Action(linkAction, linkController, new { id = item.Id })" class="btn theme_btn button_hover">Detalhes</a>
                        </div>
                        <h4 class="sec_h4">@Html.DisplayFor(modelItem => item.Nome)</h4>
                        <h5>R$ @Html.DisplayFor(modelItem => item.Tarifas.Valor)<small>/noite</small></h5>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
<!--================ Facilities Area  =================-->
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Acesso Facil na região</h2>
